<main id="accounts">
    <div class="container">
        <div class="header-page">
            <h1 class="title">Manager Accounts</h1>

            <div class="actions">
                <div class="action search">
                    <i class="fa-solid fa-search"></i>

                    <input
                        type="text"
                        class="input-search"
                        placeholder="Search..."
                    />
                </div>

                <div class="action filter">
                    <div class="select">
                        <p class="selected">Sort by : <b>Newest</b></p>

                        <i
                            class="fa-solid fa-caret-down"
                            onclick="toggle()"
                        ></i>
                    </div>

                    <ul class="dropdown-list">
                        <li class="dropdown-item">Newest</li>
                        <li class="dropdown-item">Latest</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="content-page">
            <table class="table">
                <thead>
                    <tr>
                        <th>Avatar</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Creation Date</th>
                        <th>Role</th>
                        <th>Action</th>
                    </tr>
                </thead>

                <tbody data-current-user-id="{{currentUser._id}}">
                </tbody>
            </table>

            <div class="pagination">
                <div class="info">
                    <p class="text"></p>
                </div>

                <div class="actions">
                    <button class="btn btn-prev">
                        <i class="fa-solid fa-chevron-left"></i>
                    </button>

                    <button class="btn btn-next">
                        <i class="fa-solid fa-chevron-right"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</main>

<script src="/script/accounts.js"></script>