<main id="products">
    <div class="container">
        <div class="header-page">
            <h1 class="title">Manage Products</h1>

            <div class="actions">
                <div class="action search">
                    <i class="fa-solid fa-search"></i>

                    <input
                        type="text"
                        class="input-search"
                        placeholder="Search..."
                    />
                </div>
            </div> 
        </div>

        <div class="add-group">
            <button class="add-btn" id="btn-create">
                <i class="fa-solid fa-plus"></i>
                Create
            </button>
        </div>

        <div class="sort-options">
            <div class="sort-group">
                <label for="sort">Sort by:</label>
                <select id="sort" class="select-sort">
                    <option value="name">Name</option>
                    <option value="price">Price</option>
                    <option value="createdAt">Creation Time</option>
                </select>
            </div>
        </div> 

        <div class="filter-options">
            <div class="filter-group">
                <label for="category">Category:</label>
                <select id="category" class="select-filter-category">
                    <option value="">All</option>
                    {{#each categories}}
                        <option value="{{this._id}}">{{this.name}}</option>
                    {{/each}}
                </select>
            </div>

            <div class="filter-group">
                <label for="brand">Brand:</label>
                <select id="brand" class="select-filter-brand">
                    <option value="">All</option>
                    {{#each brands}}
                        <option value="{{this._id}}">{{this.name}}</option>
                    {{/each}}
                </select>
            </div>
        </div>

        <div class="content-page">
            <table class="table">
                <thead>
                    <tr>
                        <th>Images</th>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Brand</th>
                        <th>Price</th>
                        <th>Creation Time</th>
                        <th>Stock</th>
                        <th>Actions</th>
                    </tr>
                </thead>

                <tbody>
                </tbody>
            </table>

            <div class="pagination">
                <div class="info">
                    <p class="text"></p>
                </div>

                <div class="actions">
                    <button class="btn btn-prev">
                        <i class="fa-solid fa-chevron-left"></i>
                    </button>

                    <button class="btn btn-next">
                        <i class="fa-solid fa-chevron-right"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div id="addProductDialog" class="dialog" style="display: none;">
        <div class="dialog-content">
            <h2>Add New Product</h2>
            <form id="addProductForm">
                <label for="productName">Name:</label>
                <input type="text" id="productName" name="name" required>
                
                <label for="productPrice">Price:</label>
                <input type="number" id="productPrice" name="price" required>
                
                <label for="productCategory">Category:</label>
                <select id="productCategory" name="category">
                    {{#each categories}}
                        <option value="{{this._id}}">{{this.name}}</option>
                    {{/each}}
                </select>

                <label for="productBrand">Brand:</label>
                <select id="productBrand" name="brand">
                    {{#each brands}}
                        <option value="{{this._id}}">{{this.name}}</option>
                    {{/each}}
                </select>
                
                <label for="productStock">Stock:</label>
                <input type="number" id="productStock" name="stock">
                
                <label for="productImage">Image URL:</label>
                <input type="text" id="productImage" name="imagePath">

                <div class="button-group">
                    <button type="submit">Add Product</button>
                    <button type="button" id="closeDialog">Cancel</button>
                </div>
            </form>
        </div>
    </div>

    <div class="dialog" id="updateProductDialog" style="display: none;">
        <div class="dialog-content">
            <h2>Edit Product</h2>
            <form id="updateProductForm">
                <input type="hidden" id="editProductId" name="id">
                
                <label for="editProductName">Name:</label>
                <input type="text" id="editProductName" name="name" required>
                
                <label for="editProductPrice">Price:</label>
                <input type="number" id="editProductPrice" name="price" required>
                
                <label for="editProductCategory">Category:</label>
                <select id="editProductCategory" name="category">
                    {{#each categories}}
                        <option value="{{this._id}}">{{this.name}}</option>
                    {{/each}}
                </select>

                <label for="editProductBrand">Brand:</label>
                <select id="editProductBrand" name="brand">
                    {{#each brands}}
                        <option value="{{this._id}}">{{this.name}}</option>
                    {{/each}}
                </select>

                <label for="editProductStock">Stock:</label>
                <input type="number" id="editProductStock" name="stock">

                <label for="editProductImage">Image URL:</label>
                <input type="text" id="editProductImage" name="imagePath">

                <div class="button-group">
                    <button type="submit">Update Product</button>
                    <button type="button" id="closeUpdateDialog">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</main>

<script src="/script/products.js"></script>