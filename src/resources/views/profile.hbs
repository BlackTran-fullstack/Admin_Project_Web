<main id="profile">
    <div class="container">
        <div class="header-page">
            <h1 class="title">Profile</h1>
        </div>

        <div class="content-page">
            <div class="profile-info__avatar">
                <img
                    id="avatar-img"
                    class="avatar"
                    src="{{user.avatar}}"
                    alt="avatar"
                />
                <input
                    type="file"
                    id="avatar-input"
                    name="avatar"
                    accept="image/*"
                />

                <button class="button update-btn">Update</button>
            </div>

            <div class="profile-info__detail">
                <div class="info name">
                    <div class="form-group">
                        <label for="first-name">First Name</label>
                        <input
                            type="text"
                            id="first-name"
                            name="first-name"
                            value="{{user.firstName}}"
                            required
                        />
                    </div>

                    <div class="form-group">
                        <label for="last-name">Last Name</label>
                        <input
                            type="text"
                            id="last-name"
                            name="last-name"
                            value="{{user.lastName}}"
                            required
                        />
                    </div>
                </div>

                <div class="info form-group">
                    <label for="street-address">Address</label>
                    <input
                        type="text"
                        id="address"
                        name="address"
                        value="{{user.address}}"
                        required
                    />
                </div>

                <div class="info form-group">
                    <label for="city">Town / City</label>
                    <input
                        type="text"
                        id="city"
                        name="city"
                        value="{{user.city}}"
                        required
                    />
                </div>

                <div class="info form-group form-phone">
                    <label for="phone">Phone</label>
                    <input
                        type="tel"
                        id="phone"
                        name="phone"
                        value="{{user.phone}}"
                        required
                    />

                    <span class="error phone-error">
                        <i class="fa-solid fa-circle-exclamation"></i>
                        <p class="error-text">Please enter a valid phone.</p>
                    </span>
                </div>

                <div class="info form-group form-email">
                    <label for="email">Email address</label>
                    <input
                        type="email"
                        id="email"
                        name="email"
                        value="{{user.email}}"
                        required
                    />

                    <span class="error email-error">
                        <i class="fa-solid fa-circle-exclamation"></i>
                        <p class="error-text">Please enter a valid email.</p>
                    </span>
                </div>
            </div>
        </div>
    </div>
</main>

<script src="/script/profile.js"></script>